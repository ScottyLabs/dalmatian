{
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext",
    "rootDir": "./src/",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "outDir": "./build/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noPropertyAccessFromIndexSignature": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "extends": "@tsconfig/node24/tsconfig.json"
}
